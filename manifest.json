{
  "manifest_version": 2,
  "name": "Hazmat",
  "version": "1.0.0",
  "description": "Block unwanted subreddits",
  "permissions": [
    "storage",
    "tabs"
  ],
  "minimum_chrome_version": "68",
  "content_scripts": [{
    "matches": [
      "http://www.reddit.com/*",
      "https://www.reddit.com/*",
      "http://reddit.com/*",
      "https://reddit.com/*"
    ],
    "js": [
      "src/app.js"
    ]
  }],
  "options_page": "src/options/options.html",
  "icons": {
    "16": "src/assets/16.png",
    "48": "src/assets/48.png",
    "128": "src/assets/128.png"
  }
}
